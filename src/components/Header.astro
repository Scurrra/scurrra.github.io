---
import Nav from "./Nav.astro";

import { SITE_TITLE } from "../consts";
const { current = "" } = Astro.props;
---

<header>
	<Nav current={current} />
</header>
<blockquote class="too-small-screen">
	Contents of the site can only be properly displayed on screens wider than
	360px.
</blockquote>

<style>
	header {
		display: flex;
		margin: 0 auto;
		max-width: 1200px;
		padding: 2em;
		width: 100%;
	}

	@media screen and (max-width: 520px) {
		header {
			padding: 2em 0;
		}
	}
</style>
