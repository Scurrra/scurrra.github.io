---
import Nav from "./Nav.astro";

import { SITE_TITLE } from "../consts";
const { current = "" } = Astro.props;
---

<header>
	<Nav current={current} />
</header>
<style>
	header {
		display: flex;
		margin: 0 auto;
		max-width: 1200px;
		padding: 2em;
		width: 100%;
	}
	@media screen and (max-width: 520px) {
		header {
			padding: 2em 0;
		}
	}
</style>
