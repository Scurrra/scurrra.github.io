---
const { project } = Astro.props;
---

<div class="tile-container">
    <li>
        <a href={project.data.links.github}>
            <h1 class="title">#{project.data.name}</h1>
        </a>
        <div class="info">
            <h4 class="stack">
                {project.data.stack.join(", ")}
            </h4>
            <p class="date">
                {project.data.dates[0]} -
                {project.data.dates[1]}
            </p>
        </div>
        <div class="links">
            <h5>
                <a href={project.data.links.github}> github repo </a>
            </h5>
            {
                project.data.links.colab && (
                    <h5>
                        <a href={project.data.links.colab}>google colab</a>
                    </h5>
                )
            }
            {
                project.data.links.plutos && (
                    <h5>
                        <a href={project.data.links.plutos}>pluto notebook</a>
                    </h5>
                )
            }
            {
                project.data.links.juliahub && (
                    <h5>
                        <a href={project.data.links.juliahub}>juliahub</a>
                    </h5>
                )
            }
            {
                project.data.links.crates && (
                    <h5>
                        <a href={project.data.links.crates}>crates.io</a>
                    </h5>
                )
            }
            {
                project.data.links.pypi && (
                    <h5>
                        <a href={project.data.links.pypi}>pypi</a>
                    </h5>
                )
            }
            {
                project.data.links.docs && (
                    <h5>
                        <a href={project.data.links.docs}>docs</a>
                    </h5>
                )
            }
            {
                project.data.links.guide && (
                    <h5>
                        <a href={project.data.links.guide}>guide</a>
                    </h5>
                )
            }
        </div>
        <p class="description">
            {project.data.description}
        </p>
    </li>
</div>

<style>
    .info {
        float: left;
        width: 48%;
    }
    .links {
        float: right;
        width: 42%;
        text-align: right;
    }
    .title {
        margin: 0;
        /* color: rgb(var(--black)); */
        line-height: 1;
    }
    .date {
        margin: 0;
        color: rgb(var(--gray));
        text-align: left;
    }
    .stack {
        margin-top: 0.5em;
    }
    .description {
        width: 100%;
        float: left;
    }
    a:hover h4,
    a:hover .date {
        color: rgb(var(--accent));
    }
    a:hover img {
        box-shadow: var(--box-shadow);
    }
    @media (max-width: 1020px) {
        .info {
            width: 98%;
        }
        .links {
            display: none;
        }
    }
</style>
